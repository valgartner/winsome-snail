---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const hdImages = {
  portal1: "https://images.unsplash.com/photo-1462331940025-496dfbfc7564?w=2048&q=95",
  portal2: "https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?w=2048&q=95",
  texture: "https://images.unsplash.com/photo-1579546929662-711aa81148cf?w=2048&q=95"
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style define:vars={{
			portalBg1: `url(${hdImages.portal1})`,
			portalBg2: `url(${hdImages.portal2})`,
			textureBg: `url(${hdImages.texture})`
		}}>
			:root {
				--primary: #2a623d;
				--primary-dark: #1a472a;
				--secondary: #97ce4c;
				--text: #e0e0e0;
				--background: #0d1f13;
				--accent: #44281d;
				--glow: rgba(151, 206, 76, 0.3);
			}

			body {
				margin: 0;
				font-family: 'Atkinson', sans-serif;
				background: var(--background);
				color: var(--text);
				overflow-x: hidden;
			}

			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 0;
			}

			.portal-bg {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: 
					radial-gradient(circle at 10% 20%, rgba(42, 98, 61, 0.4) 0%, transparent 50%),
					radial-gradient(circle at 90% 80%, rgba(151, 206, 76, 0.2) 0%, transparent 50%),
					var(--background);
				z-index: -1;
				&::before {
					content: '';
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					background: var(--textureBg) center/cover;
					opacity: 0.05;
					mix-blend-mode: overlay;
				}
			}

			.blog-header {
				padding: 6rem 2rem;
				text-align: center;
				position: relative;
				background: rgba(26, 71, 42, 0.3);
				backdrop-filter: blur(10px);
				border-bottom: 1px solid rgba(151, 206, 76, 0.1);
				&::before {
					content: '';
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					background: var(--portalBg1) center/cover;
					opacity: 0.1;
					mix-blend-mode: overlay;
					z-index: -1;
				}
			}

			.blog-header h1 {
				font-size: clamp(3rem, 6vw, 5rem);
				color: var(--secondary);
				margin: 0;
				text-shadow: 
					0 0 10px var(--glow),
					0 0 20px var(--glow),
					0 0 40px var(--glow);
			}

			.blog-header p {
				font-size: clamp(1.2rem, 2vw, 1.5rem);
				max-width: 800px;
				margin: 2rem auto 0;
				opacity: 0.9;
			}

			.blog-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				padding: 4rem 2rem;
				max-width: 2400px;
				margin: 0 auto;
			}

			.blog-card {
				background: rgba(26, 71, 42, 0.3);
				border-radius: 20px;
				overflow: hidden;
				backdrop-filter: blur(10px);
				border: 1px solid rgba(151, 206, 76, 0.1);
				transition: all 0.3s ease;
				height: 100%;
				display: flex;
				flex-direction: column;
			}

			.blog-card:hover {
				transform: translateY(-10px);
				box-shadow: 
					0 10px 30px rgba(0, 0, 0, 0.3),
					0 0 20px var(--glow);
				border-color: rgba(151, 206, 76, 0.3);
			}

			.blog-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}

			.blog-content {
				padding: 1.5rem;
				flex-grow: 1;
				display: flex;
				flex-direction: column;
			}

			.blog-title {
				color: var(--secondary);
				font-size: 1.5rem;
				margin: 0 0 1rem 0;
				line-height: 1.2;
				text-shadow: 0 0 10px var(--glow);
			}

			.blog-date {
				color: rgba(var(--text), 0.7);
				font-size: 0.9rem;
				margin-bottom: 1rem;
			}

			.blog-description {
				color: var(--text);
				margin: 0;
				flex-grow: 1;
				line-height: 1.6;
			}

			.blog-link {
				text-decoration: none;
				color: inherit;
				display: block;
				height: 100%;
			}

			.featured-post {
				grid-column: 1 / -1;
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 2rem;
				background: rgba(26, 71, 42, 0.5);
				padding: 2rem;
				border-radius: 30px;
				margin-bottom: 2rem;
			}

			.featured-post .blog-image {
				height: 400px;
				border-radius: 20px;
			}

			.featured-post .blog-content {
				display: flex;
				flex-direction: column;
				justify-content: center;
			}

			.featured-post .blog-title {
				font-size: 2.5rem;
			}

			.featured-post .blog-description {
				font-size: 1.2rem;
			}

			@media (max-width: 1024px) {
				.featured-post {
					grid-template-columns: 1fr;
				}

				.featured-post .blog-image {
					height: 300px;
				}
			}

			@media (max-width: 768px) {
				.blog-grid {
					grid-template-columns: 1fr;
					padding: 2rem 1rem;
				}

				.blog-header {
					padding: 4rem 1rem;
				}

				.featured-post .blog-title {
					font-size: 2rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="portal-bg"></div>
		<Header />
		<main>
			<div class="blog-header">
				<h1>Interdimensional Blog</h1>
				<p>Explore the mysteries and marvels of the Plumbus across infinite dimensions</p>
			</div>
			<div class="blog-grid">
				{posts.map((post, index) => (
					index === 0 ? (
						<div class="featured-post">
							<a href={`/blog/${post.id}/`} class="blog-link">
								<article class="blog-card">
									<img 
										src={post.data.heroImage} 
										alt="" 
										class="blog-image"
									/>
									<div class="blog-content">
										<h2 class="blog-title">{post.data.title}</h2>
										<div class="blog-date">
											<FormattedDate date={post.data.pubDate} />
										</div>
										<p class="blog-description">{post.data.description}</p>
									</div>
								</article>
							</a>
						</div>
					) : (
						<a href={`/blog/${post.id}/`} class="blog-link">
							<article class="blog-card">
								<img 
									src={post.data.heroImage} 
									alt="" 
									class="blog-image"
								/>
								<div class="blog-content">
									<h3 class="blog-title">{post.data.title}</h3>
									<div class="blog-date">
										<FormattedDate date={post.data.pubDate} />
									</div>
									<p class="blog-description">{post.data.description}</p>
								</div>
							</article>
						</a>
					)
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>